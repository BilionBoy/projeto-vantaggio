<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar C Tipo Centro Custo</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @c_tipo_centro_custo %>">
          <p>
            <strong>Descricao:</strong>
            <%= @c_tipo_centro_custo.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_c_tipo_centro_custo_path(@c_tipo_centro_custo), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", c_tipos_centros_custos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @c_tipo_centro_custo, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
