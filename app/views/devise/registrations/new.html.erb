<%# app/views/devise/registrations/new.html.erb %>
<div class="auth-container">
  <!-- Left Side (Hero) -->
  <div class="auth-hero">
    <div class="hero-overlay">
      <h2>Bem-vindo ao <span>Moovlink</span></h2>
    </div>
  </div>
  <!-- Right Side (Form) -->
  <div class="auth-content">
    <div class="auth-card">
      <div class="auth-logo">M</div>
      <h1 class="auth-title text-center mb-3">Cadastro de Usuário</h1>
      <p class="auth-subtitle text-center mb-4">Preencha seus dados para criar sua conta</p>
      <%= simple_form_for(resource, as: :user, url: user_registration_path, html: { class: "auth-form", novalidate: true }) do |f| %>
        <% if resource.errors.any? %>
          <div class="auth-errors mb-3">
            <strong>⚠️ Verifique os erros abaixo:</strong>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row g-3">
          <div class="col-md-6">
            <%= f.input :nome, required: true, label: "Nome completo", input_html: { placeholder: "Digite seu nome completo" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :telefone, label: "Telefone", input_html: { placeholder: "Digite seu telefone" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :email, required: true, label: "E-mail", input_html: { placeholder: "Digite seu e-mail", autofocus: true } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password, required: true, label: "Senha", hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length), input_html: { placeholder: "Digite sua senha" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, required: true, label: "Confirmação de Senha", input_html: { placeholder: "Confirme sua senha" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :a_tipo_usuario_id, collection: ATipoUsuario.all, label_method: :descricao, value_method: :id, prompt: "Selecione o tipo de usuário", required: true, input_html: { class: "form-select" } %>
          </div>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= f.button :submit, "Cadastrar", class: "btn btn-primary btn-lg px-5" %>
        </div>
      <% end %>
      <div class="mt-3 text-center">
        <%= link_to "Já tem uma conta? Entrar", new_user_session_path, class: "auth-link me-3" %>
      </div>
    </div>
  </div>
</div>
<style>
  .auth-card {
  width: 100%;
  max-width: 600px; /* antes era 420px */
  padding: 3rem;
  border-radius: 24px;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  text-align: center;
  animation: fadeInUp 0.6s ease;
  }
</style>