<style>
  .observatory-dashboard {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    min-height: 100vh;
    padding: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Enhanced Metrics Grid */
  .metrics-observatory {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 0 2rem;
  }
  /* ============================= */
  /* CARD SOLICITAÇÕES (ESPECÍFICO) */
  /* ============================= */

  .metrics-observatory .metric-card.requests-card {
  grid-column: span 2;        /* ocupa o espaço de dois cards */
  min-height: 140px;          /* deixa retangular */
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20px 24px;
  }

  /* Título */
  .metrics-observatory .metric-card.requests-card h3 {
  font-size: 18px;
  margin-bottom: 10px;
  }

  /* Linhas internas */
  .metrics-observatory .metric-card.requests-card p {
  margin: 2px 0;
  font-size: 14px;
  color: #4b5563;
  }

  .metric-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .metric-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #10b981);
  }

  .metric-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .primary-metric {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
  }

  .primary-metric::before {
    background: rgba(255, 255, 255, 0.3);
  }

  .metric-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .metric-icon-wrapper {
    flex-shrink: 0;
  }

  .metric-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .metric-icon svg {
    width: 24px;
    height: 24px;
  }

  .metric-icon.budget { background: linear-gradient(135deg, #10b981, #059669); }
  .metric-icon.vehicles-budgeted { background: linear-gradient(135deg, #f59e0b, #d97706); }
  .metric-icon.total-vehicles { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
  .metric-icon.requests { background: linear-gradient(135deg, #ef4444, #dc2626); }

  .primary-metric .metric-icon {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .metric-content {
    flex: 1;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 0.25rem;
    line-height: 1;
  }

  .primary-metric .metric-value {
    color: white;
  }

  .metric-label {
    color: #6b7280;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .primary-metric .metric-label {
    color: rgba(255, 255, 255, 0.9);
  }

  .requests-card .metric-label-main {
    font-size: 1.1rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 1rem;
  }

  .requests-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .request-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .request-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .request-indicator.status-0 { background: #3b82f6; }
  .request-indicator.status-1 { background: #10b981; }
  .request-indicator.status-2 { background: #f59e0b; }

  .request-status {
    flex: 1;
    font-size: 0.9rem;
    color: #374151;
    font-weight: 500;
  }

  .request-count {
    font-weight: 700;
    color: #111827;
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.8rem;
  }

  /* Enhanced Analytics Section */
  .analytics-observatory {
    padding: 0 2rem;
    margin-bottom: 2rem;
  }

  .analytics-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .chart-panel {
    background: white;
    border-radius: 20px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .chart-panel:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .panel-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f3f4f6;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .panel-title {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .title-icon {
    font-size: 1.5rem;
  }

  .title-content h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.25rem;
  }

  .title-content p {
    font-size: 0.9rem;
    color: #6b7280;
    margin: 0;
  }

  .chart-container {
    height: 300px;
    padding: 1rem 1.5rem;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .metrics-observatory {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .metrics-observatory {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .analytics-observatory {
      padding: 0 1rem;
    }

    .analytics-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
<div class="observatory-dashboard">
  <!-- MÉTRICAS -->
  <div class="metrics-observatory">
    <div class="metric-card primary-metric">
      <h2 class="metric-value">
        R$ <%= number_with_delimiter(@saldo_a_receber, delimiter: ".", separator: ",") %>
      </h2>
      <p class="metric-label">Saldo a receber</p>
    </div>
    <div class="metric-card">
      <h2 class="metric-value"><%= @servicos_ativos %></h2>
      <p class="metric-label">Serviços Ativos</p>
    </div>
    <div class="metric-card requests-card">
      <h3>Solicitações</h3>
      <p>Pendentes: <%= @solicitacoes_pendentes %></p>
      <p>Em andamento: <%= @solicitacoes_andamento %></p>
      <p>Concluídas: <%= @solicitacoes_concluidas %></p>
    </div>
  </div>
  <!-- GRÁFICOS -->
  <div class="analytics-observatory">
    <div class="analytics-grid">
      <div class="chart-panel">
        <h3>Movimentos Financeiros</h3>
        <canvas id="movimentosChart"></canvas>
      </div>
      <div class="chart-panel">
        <h3>Serviços por Categoria</h3>
        <canvas id="servicosChart"></canvas>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  new Chart(document.getElementById('movimentosChart'), {
    type: 'doughnut',
    data: {
      labels: <%= raw @movimentos_por_tipo.map(&:descricao).to_json %>,
      datasets: [{
        data: <%= raw @movimentos_por_tipo.map(&:count).to_json %>
      }]
    }
  });

  new Chart(document.getElementById('servicosChart'), {
    type: 'bar',
    data: {
      labels: <%= raw @servicos_por_categoria.map(&:descricao).to_json %>,
      datasets: [{
        label: 'Serviços',
        data: <%= raw @servicos_por_categoria.map(&:count).to_json %>
      }]
    }
  });
</script>
