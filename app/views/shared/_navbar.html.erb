<div class="navbar navbar-dark navbar-expand-xl navbar-static" style="background: linear-gradient(135deg, #317a6cff 0%, #44A08D 100%)">
  <div class="container-fluid">
    <div class="d-flex d-xl-none me-2">
      <button type="button" class="navbar-toggler sidebar-mobile-main-toggle rounded-pill">
        <i class="ph-list"></i>
      </button>
    </div>
    <div class="navbar-brand flex-0 flex-sm-1 py-0">
      <%= link_to root_path, class: 'd-flex align-items-center text-decoration-none text-white gap-2' do %>
        <img src="/layout/assets/img/LogoVantaggio.png" style="height: 45px">
        <img src="/layout/assets/img/VANTAGGIO.png" style="height: 40px">
      <% end %>
    </div>
    <ul class="nav flex-row justify-content-end align-items-center order-1 order-lg-2">
      <li class="nav-item dropdown ms-lg-3">
        <a href="#" 
       class="navbar-nav-link d-flex align-items-center rounded-pill px-3 py-2 transition"
       id="userMenuToggle"
       data-bs-toggle="dropdown"
       aria-expanded="false">
          <div class="status-indicator-container me-2">
            <i class="ph-user-circle ph-2x text-primary"></i>
          </div>
          <div class="d-none d-xl-inline-block text-start">
            <span class="text-muted small">Bem-vindo,</span>
            <h6 class="mb-0 fw-semibold"><%= current_user.nome %></h6>
          </div>
          <i class="ph-caret-down ms-2 text-secondary"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3 p-2 animate__animated animate__fadeIn" aria-labelledby="userMenuToggle">
          <li>
            <%= link_to edit_user_path(current_user.id), class: "dropdown-item d-flex align-items-center gap-2" do %>
              <i class="ph-user-gear text-primary"></i>
              <span>Meu perfil</span>
            <% end %>
          </li>
          <li><hr class="dropdown-divider my-2"></li>
          <li>
            <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item d-flex align-items-center gap-2 text-danger" do %>
              <i class="ph-sign-out"></i>
              <span>Sair</span>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
<style>
  .custom-dropdown-menu {
    display: none;
    position: absolute;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    right: 0;
    margin-top: 0px;
    z-index: 1000;
    padding: 4px;
    width: 200px;
  }

  .btn-logout {
    display: block;
    width: 100%;
    padding: 10px;
    color: #4a4a4a;
    text-align: left;
    font-size: 14px;
    background-color: white;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .btn-logout:hover {
    color: #4a4a4a;
    background-color: #f2f2f2;
  }

  .nav-item-dropdown-lg {
    position: relative;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const userMenuToggle = document.getElementById('userMenuToggle');
    const userMenu = document.getElementById('userMenu');

    userMenuToggle.addEventListener('click', function (e) {
      e.preventDefault();
      userMenu.style.display = userMenu.style.display === 'block' ? 'none' : 'block';
    });

    document.addEventListener('click', function (e) {
      if (!userMenu.contains(e.target) && !userMenuToggle.contains(e.target)) {
        userMenu.style.display = 'none';
      }
    });
  });
</script>
