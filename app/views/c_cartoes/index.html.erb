<%= render "shared/context_nav", title: t("activerecord.models.#{CCartao.model_name.i18n_key}.other"), new_path: new_c_cartao_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{CCartao.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :codigo_cartao_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), c_cartoes_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :codigo_cartao, t("activerecord.attributes.c_cartao.codigo_cartao")) %></th>
            <th><%= sort_link(@q, :qrcode, t("activerecord.attributes.c_cartao.qrcode")) %></th>
            <th><%= sort_link(@q, :c_tipo_cartao, t("activerecord.attributes.c_cartao.tipo_cartao")) %></th>
            <th><%= sort_link(@q, :c_nivel_cartao, t("activerecord.attributes.c_cartao.nivel_cartao")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @c_cartoes.each do |c_cartao| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_c_cartao_path(c_cartao), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for c_cartao, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= c_cartao_path(c_cartao) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= c_cartao.codigo_cartao %></td>
                    <td><%= c_cartao.qrcode %></td>
                    <td><%= c_cartao.c_tipo_cartao&.descricao %></td>
                    <td><%= c_cartao.c_nivel_cartao&.descricao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
