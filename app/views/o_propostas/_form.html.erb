<%= render "shared/context_nav",
     title: "Enviar Proposta" do %>
  <span class="breadcrumb-item">
    <%= link_to "Propostas", o_propostas_path, class: "text-dark" %>
  </span>
  <span class="breadcrumb-item active">
    Nova Proposta
  </span>
<% end %>
<div class="card shadow-sm border-0">
  <div class="card-header bg-light">
    <h5 class="my-0 fw-semibold">
      Enviar Proposta para: <%= @solicitacao.descricao %>
    </h5>
  </div>
  <%= simple_form_for [@solicitacao, @o_proposta] do |f| %>
    <div class="card-body">
      <%= f.error_notification %>
      <div class="row mb-3">
        <div class="col-4">
          <%= f.input :valor_total,
              label: "Valor Total (R$)",
              placeholder: "Ex.: 1500.00" %>
        </div>
        <div class="col-4">
          <%= f.input :prazo_execucao_dias,
              label: "Prazo de Execução (dias)",
              placeholder: "Ex.: 5" %>
        </div>
        <div class="col-4">
          <%= f.input :validade_proposta,
              as: :date,
              label: "Validade da Proposta" %>
        </div>
      </div>
      <%= f.input :observacao,
          as: :text,
          label: "Observações",
          input_html: { rows: 4, placeholder: "Informações adicionais do serviço..." } %>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= f.submit "Enviar Proposta", class: "btn btn-primary" %>
      <%= link_to "Cancelar", o_propostas_path, class: "btn btn-light" %>
    </div>
  <% end %>
</div>
