<%= render "shared/context_nav", title: t("activerecord.models.#{PPrestador.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{PPrestador.model_name.i18n_key}.other"), p_prestadores_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@p_prestador) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @p_prestador.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{PPrestador.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :empresa_nome, input_html: { class: "capitalize"}, placeholder: "Empresa nome"  %>
        </div>
        <div class="col-3">
          <%= f.input :cnpj, input_html: { class: "capitalize"}, placeholder: "Cnpj"  %>
        </div>
        <div class="col-3">
          <%= f.input :p_categoria_id, collection: PCategoria.all, label_method: :descricao, value_method: :id, prompt: "Selecione a Categoria" %>
        </div>
        <div class="col-3">
          <%= f.input :g_tipo_usuario_id, collection: GTipoUsuario.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Tipo de Usuário" %>
        </div>
        <div class="col-3">
          <%= f.input :g_status_usuario_id, collection: GStatusUsuario.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status do Usuário" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", p_prestadores_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>