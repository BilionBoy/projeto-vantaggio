<%= simple_form_for(@user) do |f| %>
  <div class="card shadow-sm border-0">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <%= @user.new_record? ? "Novo UsuÃ¡rio" : "Editar UsuÃ¡rio" %>
      </h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :nome, 
                      placeholder: "Digite o nome completo",
                      input_html: { class: "form-control" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :email, 
                      placeholder: "exemplo@empresa.com",
                      input_html: { class: "form-control" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :telefone, 
                      placeholder: "(99) 99999-9999",
                      input_html: { class: "form-control telefone" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :a_tipo_usuario_id, 
                      collection: @tipos_usuarios.all,
                      label_method: :descricao,
                      value_method: :id,
                      prompt: "Selecione o tipo de usuÃ¡rio",
                      input_html: { class: "form-select" } %>
        </div>
        <% if @user.new_record? %>
          <div class="col-md-6">
            <%= f.input :password,
                        required: true,
                        placeholder: "Digite uma senha",
                        input_html: { autocomplete: "new-password", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: "Confirme a senha",
                        input_html: { autocomplete: "new-password", class: "form-control" } %>
          </div>
        <% else %>
          <div class="col-md-6">
            <%= f.input :password,
                        required: false,
                        placeholder: "Deixe em branco para manter a senha atual",
                        input_html: { autocomplete: "new-password", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation,
                        required: false,
                        placeholder: "Confirme a senha (se alterada)",
                        input_html: { autocomplete: "new-password", class: "form-control" } %>
          </div>
        <% end %>
      </div>
    </div>
