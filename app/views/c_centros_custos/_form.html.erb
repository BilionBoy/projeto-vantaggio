<%= render "shared/context_nav", title: t("activerecord.models.#{CCentroCusto.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{CCentroCusto.model_name.i18n_key}.other"), c_centros_custos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@c_centro_custo) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @c_centro_custo.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{CCentroCusto.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-4">
          <%= f.input :custo, input_html: { class: "capitalize"}, placeholder: "Custo"  %>
        </div>
        <div class="col-4">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-4">
          <%= f.input :c_tipo_centro_custo_id, collection: CTipoCentroCusto.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Tipo de Centro de Custo" %>
        </div>
        <div class="col-4">
          <%= f.input :c_condominio_id, collection: CCondominio.all, label_method: :nome, value_method: :id, prompt: "Selecione o Tipo de Centro de Custo" %>
        </div>
        <div class="col-4">
          <%= f.input :valor_inicial, input_html: { class: "capitalize"}, placeholder: "Valor inicial"  %>
        </div>
        <div class="col-4">
          <%= f.input :saldo_atual, input_html: { class: "capitalize"}, placeholder: "Saldo atual"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", c_centros_custos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>