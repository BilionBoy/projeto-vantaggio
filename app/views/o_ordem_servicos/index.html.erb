<div class="report-container">
  <!-- HEADER -->
  <div class="report-header">
    <div class="header-content">
      <div>
        <h1 class="report-title">Ordens de Serviço</h1>
        <p class="report-subtitle">Acompanhamento das manutenções e serviços do condomínio</p>
      </div>
      <div class="header-actions">
        <button class="btn-secondary" onclick="window.print()">Imprimir</button>
        <button class="btn-secondary">Exportar</button>
      </div>
    </div>
  </div>
  <!-- FILTROS -->
  <div class="filters-card">
    <%= search_form_for @q, url: o_ordem_servicos_path, method: :get, html: { class: "filters-form" } do |f| %>
      <div class="filter-group flex flex-col">
        <label class="filter-label mb-1 text-sm font-medium text-gray-700">Status</label>
        <%= f.select :o_status_id_eq,
          options_from_collection_for_select(OStatus.all, :id, :descricao, params.dig(:q, :o_status_id_eq)),
          { include_blank: "Todos os Status" },
          class: "filter-select block w-48 px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>
      <button type="submit" class="btn-primary">Filtrar Resultados</button>
    <% end %>
  </div>
  <!-- MÉTRICAS -->
  <% total_ordens     = @o_ordem_servicos.size %>
  <% status_counts    = @o_ordem_servicos.group_by { |os| os.o_status&.descricao || "Sem Status" }.transform_values(&:count) %>
  <% abertas          = status_counts["Aberta"] || 0 %>
  <% em_andamento     = status_counts["Em Andamento"] || 0 %>
  <% concluidas       = status_counts["Concluída"] || 0 %>
  <div class="metrics-grid">
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
          <line x1="9" y1="9" x2="15" y2="9"/>
          <line x1="9" y1="15" x2="15" y2="15"/>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Total de Ordens</div>
        <div class="metric-value"><%= total_ordens %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
          <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Abertas</div>
        <div class="metric-value"><%= abertas %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12 6 12 12 16 14"/>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Em Andamento</div>
        <div class="metric-value"><%= em_andamento %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14 2 14 8 20 8"/>
          <line x1="16" y1="13" x2="8" y2="13"/>
          <line x1="16" y1="17" x2="8" y2="17"/>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Concluídas</div>
        <div class="metric-value"><%= concluidas %></div>
      </div>
    </div>
  </div>
  <!-- LISTA DE ORDENS -->
  <div class="orders-grid">
    <% @o_ordem_servicos.each do |os| %>
      <% status_descricao = os.o_status&.descricao || "Sem Status" %>
      <% status_class = case status_descricao.downcase
          when /aberta/ then "status-open"
          when /andamento/ then "status-progress"
          when /conclu/ then "status-completed"
          when /cancel/ then "status-cancelled"
          else "status-default"
      end %>
      <div class="order-card">
        <!-- HEADER -->
        <div class="card-header">
          <div class="card-title">
            <%= os.o_proposta.o_solicitacao.descricao.presence ||
                "Solicitação ##{os.o_proposta.o_solicitacao.numero}" %>
          </div>
          <div class="<%= status_class %>">
            <span class="status-dot"></span>
            <%= status_descricao %>
          </div>
        </div>
        <!-- DETALHES -->
        <div class="service-details">
          <p><strong>Prestador:</strong> <%= os.a_empresa_prestador.nome_fantasia %></p>
          <p><strong>Valor Total:</strong> <%= number_to_currency(os.valor_total) %></p>
          <p><strong>Prazo de Execução:</strong> <%= os.prazo_execucao_dias %> dias</p>
          <% if os.data_inicio.present? %>
            <p><strong>Início:</strong> <%= l(os.data_inicio, format: :short) %></p>
          <% end %>
          <% if os.data_fim.present? %>
            <p><strong>Fim:</strong> <%= l(os.data_fim, format: :short) %></p>
          <% end %>
        </div>
        <!-- AÇÕES -->
        <div class="card-footer">
          <!-- PRESTADOR FINALIZA -->
          <% if current_user.a_empresa_prestador_id.present? && status_descricao == "Aberta" %>
            <%= button_to finalizar_o_ordem_servico_path(os),
                method: :patch,
                class: "btn btn-success" do %>
              Marcar como Finalizada
            <% end %>
          <% end %>
          <!-- SÍNDICO APROVA FINALIZAÇÃO -->
          <% if current_user.c_condominio_id.present? && status_descricao == "Finalizada" %>
            <%= button_to aprovar_o_ordem_servico_path(os),
                method: :patch,
                class: "btn btn-primary" do %>
              Aprovar Finalização
            <% end %>
          <% end %>
          <!-- ADMIN CONFIRMA PAGAMENTO -->
          <% if current_user.admin? && status_descricao == "Aprovada" %>
            <%= button_to pagar_o_ordem_servico_path(os),method: :patch,class: "btn btn-success",data: { turbo: false, confirm: "Confirmar pagamento desta ordem de serviço?" } do %>
              Confirmar Pagamento
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- EMPTY STATE -->
  <% if @o_ordem_servicos.empty? %>
    <div class="empty-state">
      <h3 class="empty-title">Nenhuma ordem de serviço encontrada</h3>
      <p class="empty-description">Ajuste os filtros ou aguarde novas OS serem criadas.</p>
    </div>
  <% end %>
  <!-- PAGINAÇÃO -->
  <% if defined?(@pagy) && @pagy %>
    <div class="pagination-container">
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  <% end %>
</div>
