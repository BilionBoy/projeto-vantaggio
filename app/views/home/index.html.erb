    color: #065f46;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .requests-card .metric-label-main {
    font-size: 1.1rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 1rem;
  }

  .requests-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .request-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .request-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .request-indicator.status-0 { background: #3b82f6; }
