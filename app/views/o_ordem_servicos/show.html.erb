<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar O Ordem Servico</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_ordem_servico %>">
          <p>
            <strong>O Proposta:</strong>
            <%= @o_ordem_servico.o_proposta %>
          </p>
          <p>
            <strong>C Condominio:</strong>
            <%= @o_ordem_servico.c_condominio %>
          </p>
          <p>
            <strong>A Empresa Prestador:</strong>
            <%= @o_ordem_servico.a_empresa_prestador %>
          </p>
          <p>
            <strong>Valor Total:</strong>
            <%= @o_ordem_servico.valor_total %>
          </p>
          <p>
            <strong>Prazo Execucao Dias:</strong>
            <%= @o_ordem_servico.prazo_execucao_dias %>
          </p>
          <p>
            <strong>Data Inicio:</strong>
            <%= @o_ordem_servico.data_inicio %>
          </p>
          <p>
            <strong>Data Fim:</strong>
            <%= @o_ordem_servico.data_fim %>
          </p>
          <p>
            <strong>O Status:</strong>
            <%= @o_ordem_servico.o_status %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_ordem_servico_path(@o_ordem_servico), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_ordem_servicos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_ordem_servico, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
