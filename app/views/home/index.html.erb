  }

  .insight-item {
    text-align: center;
  }

  .insight-label {
    display: block;
    font-size: 0.8rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }

  .insight-value {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: #111827;
  }

  /* Observatory Footer */
  .observatory-footer {
    background: white;
    border-top: 1px solid #e5e7eb;
    padding: 1.5rem 2rem;
    margin: 2rem -2rem -1rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-info {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .update-time {
    font-size: 0.9rem;
    color: #6b7280;
  }

  .system-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
