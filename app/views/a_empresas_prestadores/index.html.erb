<%= render "shared/context_nav", title: t("activerecord.models.#{AEmpresaPrestador.model_name.i18n_key}.other"), new_path: new_a_empresa_prestador_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{AEmpresaPrestador.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :nome_fantasia_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), a_empresas_prestadores_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :nome_fantasia, t("activerecord.attributes.a_empresa_prestador.nome_fantasia")) %></th>
            <th><%= sort_link(@q, :razao_social, t("activerecord.attributes.a_empresa_prestador.razao_social")) %></th>
            <th><%= sort_link(@q, :cnpj, t("activerecord.attributes.a_empresa_prestador.cnpj")) %></th>
            <th><%= sort_link(@q, :telefone, t("activerecord.attributes.a_empresa_prestador.telefone")) %></th>
            <th><%= sort_link(@q, :contato, t("activerecord.attributes.a_empresa_prestador.contato")) %></th>
            <th><%= sort_link(@q, :email, t("activerecord.attributes.a_empresa_prestador.email")) %></th>
            <th><%= sort_link(@q, :a_status, t("activerecord.attributes.a_empresa_prestador.status")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @a_empresas_prestadores.each do |a_empresa_prestador| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_a_empresa_prestador_path(a_empresa_prestador), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for a_empresa_prestador, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= a_empresa_prestador_path(a_empresa_prestador) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= a_empresa_prestador.nome_fantasia %></td>
                    <td><%= a_empresa_prestador.razao_social %></td>
                    <td><%= a_empresa_prestador.cnpj %></td>
                    <td><%= a_empresa_prestador.telefone %></td>
                    <td><%= a_empresa_prestador.contato %></td>
                    <td><%= a_empresa_prestador.email %></td>
                    <td><%= a_empresa_prestador.a_status&.descricao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
