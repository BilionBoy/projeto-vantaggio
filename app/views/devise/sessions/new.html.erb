<div class="auth-layout">
  <!-- LEFT / BRAND -->
  <aside class="auth-brand">
    <div class="brand-content">
      <!-- Se quiser trocar por imagem depois, pode -->
      <div class="auth-logo" style="font-size: 42px; font-weight: 800; margin-bottom: 3rem;">
        VANTAGGIO
      </div>
      <h1>
        Bem-vindo ao <br>
        <span>VANTAGGIO</span>
      </h1>
      <p>
        Gerencie sua conta com segurança,<br>
        rapidez e praticidade em um só lugar.
      </p>
      <footer>
        © <%= Time.current.year %> Vantaggio
      </footer>
    </div>
  </aside>
  <!-- RIGHT / FORM -->
  <main class="auth-main">
    <div class="auth-box">
      <h2>Acesse sua conta</h2>
      <p class="subtitle">Preencha seus dados para continuar</p>
      <%= simple_form_for(
        resource,
        as: resource_name,
        url: send("#{resource_name}_session_path"),
        html: { class: "auth-form", novalidate: true }
      ) do |f| %>
        <% if resource.errors.any? %>
          <div class="auth-alert">
            <strong>Erro ao entrar</strong>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.input :email,
            label: "E-mail",
            required: true,
            input_html: {
              autocomplete: "email",
              autofocus: true,
              placeholder: "Digite seu e-mail"
            } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
            label: "Senha",
            required: true,
            input_html: {
              autocomplete: "current-password",
              placeholder: "Digite sua senha"
            } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-options">
            <label class="remember">
              <%= f.check_box :remember_me %>
              <span>Lembrar de mim</span>
            </label>
          </div>
        <% end %>
        <%= f.button :submit,
          "Entrar",
          class: "btn-auth",
          data: { disable_with: "Entrando..." } %>
      <% end %>
      <div class="auth-links" style="margin-top: 1.5rem; text-align: center;">
        <% if devise_mapping.registerable? %>
          <%= link_to "Criar nova conta",
            new_user_registration_path,
            class: "forgot-link" %>
        <% end %>
      </div>
    </div>
  </main>
</div>
<style>
  /* RESET / BASE */
  .auth-layout {
  display: flex;
  min-height: 100vh;
  font-family: 'Manrope', sans-serif;
  background: #f5f7fb;
  }

  /* =========================
   LEFT / BRAND
  ========================= */
  .auth-brand {
  flex: 1;
  background: rgb(14 97 59);
  color: #fff;
  display: flex;
  align-items: center;
  padding: 4rem;
  }

  .brand-content {
  max-width: 480px;
  }

  .brand-content h1 {
  font-size: 2.4rem;
  line-height: 1.3;
  margin-bottom: 1rem;
  }

  .brand-content h1 span {
  color: #ff9f1c;
  }

  .brand-content p {
  font-size: 1.05rem;
  opacity: 0.9;
  }

  .brand-content footer {
  margin-top: 4rem;
  font-size: 0.85rem;
  opacity: 0.6;
  }

  /* =========================
   RIGHT / FORM
  ========================= */
  .auth-main {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3rem;
  }

  .auth-box {
  width: 100%;
  max-width: 420px;
  background: #fff;
  padding: 3rem;
  border-radius: 16px;
  box-shadow: 0 30px 60px rgba(0,0,0,0.08);
  }

  .auth-box h2 {
  font-size: 1.8rem;
  font-weight: 700;
  }

  .subtitle {
  margin-bottom: 2rem;
  color: #6b7280;
  }

  /* =========================
   FORM
  ========================= */
  .auth-form .form-group {
  margin-bottom: 1.2rem;
  }

  .auth-form label {
  font-weight: 600;
  font-size: 0.9rem;
  }

  .auth-form input {
  width: 100%;
  height: 48px;
  border-radius: 10px;
  border: 1px solid #d1d5db;
  padding: 0 14px;
  transition: all .2s ease;
  font-size: 0.95rem;
  }

  .auth-form input:focus {
  border-color: #2563eb;
  box-shadow: 0 0 0 3px rgba(37,99,235,.15);
  outline: none;
  }

  /* =========================
   OPTIONS
  ========================= */
  .form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.85rem;
  margin-bottom: 1.6rem;
  color: #6b7280;
  }

  /* CHECKBOX */
  .remember {
  display: flex;
  align-items: center;
  gap: 6px;
  cursor: pointer;
  }

  .remember input {
  width: 16px;
  height: 16px;
  accent-color: #2563eb;
  }

  .remember span {
  font-weight: 500;
  }

  /* =========================
   LINKS
  ========================= */
  .forgot-link {
  color: #2563eb;
  text-decoration: none;
  font-weight: 500;
  }

  .forgot-link:hover {
  text-decoration: underline;
  }

  /* =========================
   BUTTON
  ========================= */
  .btn-auth {
  width: 100%;
  height: 50px;
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: #fff;
  border: none;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: transform .15s ease, box-shadow .15s ease;
  }

  .btn-auth:hover {
  transform: translateY(-1px);
  box-shadow: 0 12px 24px rgba(37,99,235,.35);
  color: white;
  }

  /* =========================
   ERRORS
  ========================= */
  .auth-alert {
  background: #fee2e2;
  color: #991b1b;
  padding: 1rem;
  border-radius: 10px;
  margin-bottom: 1.5rem;
  font-size: 0.9rem;
  }

  .auth-alert ul {
  margin: 0.5rem 0 0;
  padding-left: 1.2rem;
  }

  /* =========================
   RESPONSIVE
  ========================= */
  @media (max-width: 900px) {
  .auth-brand {
    display: none;
  }

  .auth-main {
    padding: 2rem;
  }

  .auth-box {
    padding: 2rem;
  }
  }
</style>