<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar C Cartao</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @c_cartao %>">
          <p>
            <strong>Codigo Cartao:</strong>
            <%= @c_cartao.codigo_cartao %>
          </p>
          <p>
            <strong>Qrcode:</strong>
            <%= @c_cartao.qrcode %>
          </p>
          <p>
            <strong>C Tipo Cartao:</strong>
            <%= @c_cartao.c_tipo_cartao %>
          </p>
          <p>
            <strong>C Nivel Cartal:</strong>
            <%= @c_cartao.c_nivel_cartal %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_c_cartao_path(@c_cartao), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", c_cartoes_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @c_cartao, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
