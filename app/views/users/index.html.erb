<%= render "shared/context_nav",title: t("activerecord.models.#{User.model_name.i18n_key}.other"),new_path: new_user_path do %>
  <span class="breadcrumb-item active">
    <%= t("activerecord.models.#{User.model_name.i18n_key}.other") %>
  </span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2", autocomplete: "off" } do |f| %>
      <%= 
        f.search_field :nome_or_email_cont,
        class: "form-control",
        placeholder: "Pesquisar...",
        "data-bs-popup": "tooltip",
        "data-bs-original-title": "Pesquise por Nome, Email ou Telefone"
      %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <% if params[:q].present? %>
        <%= link_to tag.i(class: "ph-x-circle"), users_path, class: "btn btn-light" %>
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <%= render "shared/notice" %>
    <table class="table table-sm table-bordered table-striped">
      <thead>
        <tr>
          <th class="text-center" style="width: 100px;">Ações</th>
          <th><%= sort_link(@q, :nome,  t("activerecord.attributes.user.nome")) %></th>
          <th><%= sort_link(@q, :email, t("activerecord.attributes.user.email")) %></th>
          <th><%= sort_link(@q, :telefone, t("activerecord.attributes.user.telefone")) %></th>
          <th><%= sort_link(@q, :a_tipo_usuario, t("activerecord.attributes.user.tipo_usuario")) %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="text-center">
              <div class="dropdown-toggle">
                <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="ph-gear"></i>
                </a>
                <div class="dropdown-menu">
                  <div class="dropdown-header">Opções</div>
                  <!-- EDITAR — rota correta -->
                  <%= link_to edit_user_path(user), class: "dropdown-item" do %>
                    <i class="ph-pen me-2"></i> Editar
                  <% end %>
                  <!-- EXCLUIR -->
                  <%= form_for user, method: :delete do |f| %>
                    <a class="dropdown-item hand-pointer"
                       data-confirm-delete="<%= user_path(user) %>"
                       data-csrf-token="<%= form_authenticity_token %>">
                      <i class="ph-trash-simple me-2"></i> Excluir
                    </a>
                  <% end %>
                </div>
              </div>
            </td>
            <td><%= user.nome %></td>
            <td><%= user.email %></td>
            <td><%= user.telefone %></td>
            <td><%= user.a_tipo_usuario.descricao %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
