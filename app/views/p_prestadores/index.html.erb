<%= render "shared/context_nav", title: t("activerecord.models.#{PPrestador.model_name.i18n_key}.other"), new_path: new_p_prestador_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{PPrestador.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :empresa_nome_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), p_prestadores_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :empresa_nome, t("activerecord.attributes.p_prestador.empresa_nome")) %></th>
            <th><%= sort_link(@q, :cnpj, t("activerecord.attributes.p_prestador.cnpj")) %></th>
            <th><%= sort_link(@q, :p_categoria, t("activerecord.attributes.p_prestador.categoria")) %></th>
            <th><%= sort_link(@q, :g_tipo_usuario, t("activerecord.attributes.p_prestador.tipo_usuario")) %></th>
            <th><%= sort_link(@q, :g_status_usuario, t("activerecord.attributes.p_prestador.status_usuario")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @p_prestadores.each do |p_prestador| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_p_prestador_path(p_prestador), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for p_prestador, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= p_prestador_path(p_prestador) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= p_prestador.empresa_nome %></td>
                    <td><%= p_prestador.cnpj %></td>
                    <td><%= p_prestador.p_categoria&.descricao%></td>
                    <td><%= p_prestador.g_tipo_usuario&.descricao%></td>
                    <td><%= p_prestador.g_status_usuario&.descricao%></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
