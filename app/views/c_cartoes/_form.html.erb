<%= render "shared/context_nav", title: t("activerecord.models.#{CCartao.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{CCartao.model_name.i18n_key}.other"), c_cartoes_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@c_cartao) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @c_cartao.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{CCartao.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :c_tipo_cartao_id, collection: CTipoCartao.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Tipo de Cartão" %>
        </div>
        <div class="col-3">
          <%= f.input :c_nivel_cartao_id, collection: CNivelCartao.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Condomínio" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", c_cartoes_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>