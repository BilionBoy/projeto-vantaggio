<%= render "shared/context_nav", title: t("activerecord.models.#{CCondominio.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{CCondominio.model_name.i18n_key}.other"), c_condominios_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@c_condominio) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @c_condominio.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{CCondominio.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-3">
          <%= f.input :endereco, input_html: { class: "capitalize"}, placeholder: "Endereco"  %>
        </div>
        <div class="col-3">
          <%= f.input :unidade, input_html: { class: "capitalize"}, placeholder: "Unidade"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", c_condominios_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>