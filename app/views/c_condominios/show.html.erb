<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar C Condominio</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @c_condominio %>">
          <p>
            <strong>Nome:</strong>
            <%= @c_condominio.nome %>
          </p>
          <p>
            <strong>Endereco:</strong>
            <%= @c_condominio.endereco %>
          </p>
          <p>
            <strong>Unidade:</strong>
            <%= @c_condominio.unidade %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_c_condominio_path(@c_condominio), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", c_condominios_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @c_condominio, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
