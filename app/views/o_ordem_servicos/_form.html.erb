
<%= render "shared/context_nav", title: t("activerecord.models.#{OOrdemServico.model_name.i18n_key}.other") do  %>
<span class="breadcrumb-item"><%= link_to t("activerecord.models.#{OOrdemServico.model_name.i18n_key}.other"), o_ordem_servicos_path, class: "text-dark" %></span>
<span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@o_ordem_servico) do |f| %>
<div class="card">
  <div class="card-header">
    <h5 class="my-0">
      <%= @o_ordem_servico.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{OOrdemServico.model_name.i18n_key}.one") %>
    </h5>
  </div>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="row">
      
        
          <div class="col-12">
            <%= f.association :o_proposta, input_html: { class: "capitalize"}, placeholder: "O proposta"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :c_condominio, input_html: { class: "capitalize"}, placeholder: "C condominio"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_empresa_prestador, input_html: { class: "capitalize"}, placeholder: "A empresa prestador"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :valor_total, input_html: { class: "capitalize"}, placeholder: "Valor total"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :prazo_execucao_dias, input_html: { class: "capitalize"}, placeholder: "Prazo execucao dias"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :data_inicio, input_html: { class: "capitalize"}, placeholder: "Data inicio"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :data_fim, input_html: { class: "capitalize"}, placeholder: "Data fim"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :o_status, input_html: { class: "capitalize"}, placeholder: "O status"  %>
          </div>
        
    </div>
  </div>
  <div class="card-footer">
    <%= btn_submit(f) %>
    <%= link_to "Voltar", o_ordem_servicos_path, class: "btn btn-light" %>
  </div>
</div>
<% end %>