<%= render "shared/context_nav", title: t("activerecord.models.#{CSindico.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{CSindico.model_name.i18n_key}.other"), c_sindicos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@c_sindico) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @c_sindico.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{CSindico.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-3">
          <%= f.input :email, input_html: { class: "capitalize"}, placeholder: "Email"  %>
        </div>
        <div class="col-3">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-3">
          <%= f.input :cpf, input_html: { class: "capitalize"}, placeholder: "Cpf"  %>
        </div>
        <div class="col-3">
          <%= f.input :matricula, input_html: { class: "capitalize"}, placeholder: "Matricula"  %>
        </div>
        <div class="col-3">
          <%= f.input :c_condominio_id, collection: CCondominio.all, label_method: :nome, value_method: :id, prompt: "Selecione o Condomínio" %>
        </div>
        <div class="col-3">
          <%= f.input :g_tipo_usuario_id, collection: GTipoUsuario.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Tipo de Usuário" %>
        </div>
        <div class="col-3">
          <%= f.input :g_status_usuario_id, collection: GStatusUsuario.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status do Usuário" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", c_sindicos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>