    color: #86efac;
  }

  .trend-text {
    font-size: 0.8rem;
    color: #6b7280;
  }

  .primary-metric .trend-text {
    color: rgba(255, 255, 255, 0.8);
  }

  .metric-progress {
    margin-top: 0.75rem;
  }

  .progress-bar {
    height: 6px;
    background: #e5e7eb;
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #f59e0b, #d97706);
    border-radius: 3px;
    transition: width 1s ease;
  }

  .progress-text {
    font-size: 0.8rem;
    color: #6b7280;
    font-weight: 500;
  }

  .metric-status {
    margin-top: 0.75rem;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
