    </div>
  <% else %>
    <div class="cards-grid" data-count="<%= @solicitacoes.count %>">
      <% @solicitacoes.each do |solic| %>
        <% propostas_do_prestador = solic.o_propostas.where(a_empresa_prestador_id: current_user.a_empresa_prestador_id).order(:created_at) %>
