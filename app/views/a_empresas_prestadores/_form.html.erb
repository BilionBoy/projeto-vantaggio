<%= render "shared/context_nav", title: t("activerecord.models.#{AEmpresaPrestador.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AEmpresaPrestador.model_name.i18n_key}.other"), a_empresas_prestadores_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_empresa_prestador) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @a_empresa_prestador.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AEmpresaPrestador.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-4">
          <%= f.input :nome_fantasia, input_html: { class: "capitalize"}, placeholder: "Nome fantasia"  %>
        </div>
        <div class="col-4">
          <%= f.input :razao_social, input_html: { class: "capitalize"}, placeholder: "Razao social"  %>
        </div>
        <div class="col-4">
          <%= f.input :cnpj, input_html: { class: "capitalize"}, placeholder: "Cnpj"  %>
        </div>
        <div class="col-4">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-4">
          <%= f.input :contato, input_html: { class: "capitalize"}, placeholder: "Contato"  %>
        </div>
        <div class="col-4">
          <%= f.input :email, input_html: { class: "capitalize"}, placeholder: "Email"  %>
        </div>
        <div class="col-4">
          <%= f.input :a_status_id, collection: AStatus.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status" %>
        </div>
        <hr>
        <h5>Endereço</h5>
        <div class="row">
          <%= f.fields_for :g_endereco do |e| %>
            <div class="col-3">
              <%= e.input :cep, input_html: { class: "capitalize"}, placeholder: "CEP" %>
            </div>
            <div class="col-3">
              <%= e.input :rua, input_html: { class: "capitalize"}, placeholder: "Rua" %>
            </div>
            <div class="col-3">
              <%= e.input :bairro, input_html: { class: "capitalize"}, placeholder: "Bairro" %>
            </div>
            <div class="col-3">
              <%= e.input :numero, input_html: { class: "capitalize"}, placeholder: "Número" %>
            </div>
            <div class="col-3">
              <%= e.input :g_municipio_id, collection: GMunicipio.all, label_method: :to_s, value_method: :id, prompt: "Selecione um Município" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", a_empresas_prestadores_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>