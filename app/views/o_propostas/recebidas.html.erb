<div class="propostas-container">
  <div class="propostas-header">
    <h1>Propostas Recebidas</h1>
    <p>Gerencie todas as propostas enviadas pelos prestadores</p>
  </div>
  <div class="propostas-controls">
    <div class="propostas-search">
      <%= search_form_for @q, html: { class: "d-flex gap-2 w-100", autocomplete: "off" } do |f| %>
        <%= f.search_field :o_solicitacao_descricao_cont, class: "form-control", placeholder: "Pesquisar solicitação" %>
        <%= f.button(type: "submit", class: "btn btn-info") { tag.i(class: "ph-magnifying-glass") } %>
        <% if params[:q] %>
          <%= link_to tag.i(class: "ph-x-circle"), recebidas_o_propostas_path, class: "btn btn-light" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="propostas-grid">
    <% @o_propostas.each do |p| %>
      <div class="proposta-card">
        <!-- HEADER -->
        <div class="proposta-card-header">
          <div class="proposta-id">
            <h3>PROP-<%= p.id.to_s.rjust(3, "0") %></h3>
            <p><%= p.o_solicitacao&.descricao || "Sem descrição" %></p>
          </div>
          <% status = p.o_status&.descricao || "Pendente" %>
          <% badge = case status
                    when "Aprovada" then "aprovada"
                    when "Rejeitada" then "rejeitada"
                    else "pendente"
                  end %>
          <span class="badge-status <%= badge %>"><%= status %></span>
        </div>
        <!-- INFO -->
        <div class="proposta-info">
          <div class="proposta-info-item">
            <i class="ph-buildings"></i>
            <span><%= p.a_empresa_prestador&.nome_fantasia || "Prestador não informado" %></span>
          </div>
          <div class="proposta-info-item">
            <i class="ph-user"></i>
            <span><%= p.usuario_envio&.nome || "Usuário não informado" %></span>
          </div>
        </div>
        <!-- GRID DE DETALHES -->
        <div class="proposta-details-grid">
          <div class="proposta-detail-item">
            <i class="ph-calendar"></i>
            <div>
              <div class="label">Validade</div>
              <div class="value">
                <%= p.validade_proposta ? l(p.validade_proposta, format: :short) : "--" %>
              </div>
            </div>
          </div>
          <div class="proposta-detail-item">
            <i class="ph-clock"></i>
            <div>
              <div class="label">Prazo</div>
              <div class="value"><%= p.prazo_execucao_dias %> dias</div>
            </div>
          </div>
        </div>
        <!-- OBSERVAÇÃO -->
        <div class="proposta-section">
          <div class="proposta-section-title">Observação</div>
          <% if p.observacao.present? %>
            <div class="p-3 bg-white border rounded">
              <%= simple_format(p.observacao) %>
            </div>
          <% else %>
            <div class="p-2 fst-italic text-muted">
              Nenhuma observação fornecida.
            </div>
          <% end %>
        </div>
        <!-- FOOTER -->
        <div class="proposta-actions d-flex gap-2">
          <!-- Detalhes sempre visível -->
          <%= link_to "Detalhes", p, class: "btn btn-primary" %>
          <% status = p.o_status&.descricao %>
          <!-- Só mostra ações se NÃO estiver finalizada -->
          <% unless status.in?(%w[Aprovada Rejeitada]) %>
            <%= button_to aceitar_o_proposta_path(p),method: :post,class: "btn btn-success",data: { confirm: "Aceitar esta proposta e gerar OS?" } do %>
              Aceitar
            <% end %>
            <%= button_to recusar_o_proposta_path(p),method: :post,class: "btn btn-danger",data: { confirm: "Recusar esta proposta?" } do %>
              Recusar
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- PAGINAÇÃO -->
  <div class="propostas-pagination">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-sm"').html_safe %>
  </div>
</div>
